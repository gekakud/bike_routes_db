{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,  // Enable JSON imports
    "sourceMap": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
